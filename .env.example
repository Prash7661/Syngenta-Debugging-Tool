# Application Configuration
NODE_ENV=production
PORT=3000
HOSTNAME=0.0.0.0

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/openai/deployments/your-deployment/chat/completions?api-version=2025-01-01-preview

# SFMC Configuration
SFMC_CLIENT_ID=your_sfmc_client_id
SFMC_CLIENT_SECRET=your_sfmc_client_secret
SFMC_SUBDOMAIN=your_sfmc_subdomain
SFMC_AUTH_BASE_URL=https://your_subdomain.auth.marketingcloudapis.com
SFMC_REST_BASE_URL=https://your_subdomain.rest.marketingcloudapis.com
SFMC_SOAP_BASE_URL=https://your_subdomain.soap.marketingcloudapis.com

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=
REDIS_DB=0

# Session Configuration
SESSION_SECRET=your_session_secret_here
SESSION_TIMEOUT=3600000

# Encryption Configuration
ENCRYPTION_KEY=your_32_character_encryption_key_here
ENCRYPTION_ALGORITHM=aes-256-gcm

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090
LOG_LEVEL=info

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000

# Docker Configuration
DOCKER_REGISTRY=your_registry_url
DOCKER_IMAGE_TAG=latest